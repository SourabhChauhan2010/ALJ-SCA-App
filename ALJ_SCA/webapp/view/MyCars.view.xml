<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.sap.alj.sca.ALJ_SCA.controller.MyCars"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox class="sapUiSmallMarginTop">
		<HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBeginEnd sapUiTinyMarginBottom">
			<Label text="{i18n>SelectVehicle}" class="aljTitleClass"/>
			<Button text="{i18n>AddVehicle}" class="aljLightGreyBtnStyle" press="onAddVehiclePress"/>
		</HBox>
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.VehicleList" type="XML"/>
		<VBox class="aljBoxStyle sapUiSmallMarginTop">
			<Label text="{i18n>Recommended}" class="aljTitleClass sapUiSmallMarginBegin"/>
			<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.ServiceList" type="XML"/>
		</VBox>
		<VBox class="aljWhiteBoxStyle" visible="false">
			<Label text="{i18n>VehicleInformatics}" class="aljTitleClass sapUiSmallMarginBegin"/>
			<HBox class="sapUiSmallMarginBeginEnd" items="{oAppModel>/vehicleInfo}">
				<CustomListItem class="aljReccListStyle"
					visible="{path: 'oAppModel>isSelected', formatter:'com.sap.alj.sca.ALJ_SCA.util.formatter.highlightSelectedItem'}" type="Active"
					press="onSelectableItemPress">
					<VBox alignItems="Center" width="8rem" height="9rem" justifyContent="SpaceAround">
						<Image src="{oAppModel>src}" width="3rem"/>
						<Text text="{oAppModel>type}"/>
					</VBox>
				</CustomListItem>
			</HBox>
		</VBox>
		<VBox class="aljBoxStyle sapUiSmallMarginTop" visible="false">
			<Label text="{i18n>ServiceHistory}" class="aljTitleClass sapUiSmallMarginBegin"/>
			<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.ServiceHistory" type="XML"/>
		</VBox>
	</VBox>
</mvc:View>