<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ScrollContainer height="100%" width="100%" horizontal="true" focusable="true">
		<HBox items="{oAppModel>/recommendations}" class="sapUiSmallMarginBeginEnd">
			<CustomListItem class="aljReccListStyle" press="onPress">
				<VBox alignItems="Center">
					<Label text="{oAppModel>serviceType}" class="sapUiTinyMarginBottom"/>
					<Label text="{oAppModel>sar}" class="sapUiTinyMarginBottom"/>
					<Image src="{oAppModel>src}" width="6rem"/>
					<Button text="Book" class="aljRedBtnStyle"/>
				</VBox>
			</CustomListItem>
		</HBox>
	</ScrollContainer>
</core:FragmentDefinition>