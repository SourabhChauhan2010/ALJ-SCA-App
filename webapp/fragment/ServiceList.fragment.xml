<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ScrollContainer height="100%" width="100%" horizontal="true" focusable="true">
		<HBox items="{oAppModel>/recommendations}" class="sapUiSmallMarginBeginEnd">
			<CustomListItem class="aljReccListStyle"
				visible="{path: 'oAppModel>isSelected', formatter:'com.sap.alj.sca.ALJ_SCA.util.formatter.highlightSelectedItem'}" type="Active"
				press="onServiceItemPress">
				<VBox alignItems="Center">
					<Label text="{oAppModel>serviceType}" class="sapUiTinyMarginBottom"/>
					<Image src="{oAppModel>src}" width="6rem" class="sapUiTinyMarginBottom"/>
					<Label text="{oAppModel>sar}" design="Bold" class="sapUiTinyMarginBottom"/>
					<Button text="{i18n>Book}" class="aljRedBtnStyle" press="bookService" visible="{= ${oAppModel>/currentScreen} !== 'BookAService'? true: false}"/>
				</VBox>
			</CustomListItem>
		</HBox>
	</ScrollContainer>
</core:FragmentDefinition>