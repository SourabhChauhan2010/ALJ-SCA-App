<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.sap.alj.sca.ALJ_SCA.controller.EditProfile"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<VBox justifyContent="Center" alignItems="Center" class="sapUiSmallMargin" renderType="Bare">
		<!--<Text text="{i18n>SignUpLabel}" class="aljSignUpLabelStyle"/>-->
		<HBox class="aljAddProfPicStyle"/>
		<Text text="{i18n>AddProfilePic}" class="sapUiTinyMarginBottom"/>
		<HBox class="aljEPInputStyle">
			<Image src="image/FullName.png"/>
			<Input placeholder="{i18n>FirstName}"/>
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/FullName.png"/>
			<Input placeholder="{i18n>MiddleName}"/>
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/FullName.png"/>
			<Input placeholder="{i18n>LastName}"/>
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/NID.png"/>
			<Input placeholder="{i18n>NID}" 	maxLength="10" change="validateNID"/>
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/Mobile.png"/>
			<Input placeholder="{i18n>Mobile}"  maxLength="10"  change="onConfirmEditProfile"/>
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/Email.png"/>
			<Input placeholder="{i18n>Email}"  type="Email" change="validEmailValidation" />
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/Password.png"/>
			<Input placeholder="{i18n>Password}"/>
		</HBox>
		<HBox class="aljEPInputStyle">
			<Image src="image/Password.png"/>
			<Input placeholder="{i18n>RetypePassword}"/>
		</HBox>
		<Button text="{i18n>Update}" press="" class="aljRedBtnStyle sapUiTinyMarginTop"/>
	</VBox>
</mvc:View>