<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.sap.alj.sca.ALJ_SCA.controller.Notification" xmlns:html="http://www.w3.org/1999/xhtml">
	<List items="{oAppModel>/aNotificationList}" class="aljNotificationList">
		<NotificationListItem
			title="{oAppModel>title}"
			description="{oAppModel>desc}"
			showCloseButton="false" datetime="{oAppModel>datetime}" unread="{oAppModel>unread}"
			authorPicture="sap-icon://circle-task-2">
		</NotificationListItem>
	</List>
</mvc:View>