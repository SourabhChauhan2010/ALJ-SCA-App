<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.sap.alj.sca.ALJ_SCA.controller.AddVehicle"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox alignItems="Center" class="sapUiSmallMargin">
		<Image src="image/scan.png" width="5rem" class="sapUiTinyMarginBottom" press="onPressScan"/>
		<Text text="{i18n>ScanIshthimara}" class="aljHeadingTextStyle sapUiTinyMarginBottom"/>
		<Label text="{i18n>OR}" class="sapUiSmallMarginBottom"/>
		<Text text="{i18n>EnterManually}" class="sapUiSmallMarginBottom"/>
		<VBox width="100%">
			<Text text="{i18n>EnterVIN}" class="aljHeadingTextStyle sapUiTinyMarginBottom"/>
			<Input value="{oAppModel>/enteredVIN}" class="aljInputStyle sapUiTinyMarginBottom"/>
			<Button text="{i18n>Add}" press="onPressAddVehicle" class="aljWhiteBtnClass"/>
		</VBox>
	</VBox>
</mvc:View>