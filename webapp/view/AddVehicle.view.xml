<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.sap.alj.sca.ALJ_SCA.controller.AddVehicle"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox class="aljAddVehicleBoxStyle" width="100%">
		<HBox alignItems="Center" justifyContent="Center" width="100%" class="sapUiSmallMarginBottom">
			<Image src="image/vehicleInfo.png" width="2.25rem" class="sapUiTinyMarginEnd"/>
			<Text text="+Add Vehicle" />
		</HBox>
		<Text text="{i18n>ScanIshthimara}" class="aljHeadingTextStyle sapUiTinyMarginBottom"/>
		<Label text="VIN number is mandatory for service records." class="sapUiSmallMarginBottom"/>
		<Text text="Scan will auto fill the VIN number" class="aljScanPHStyle sapUiSmallMarginBottom"/>
		<HBox class="aljScannerStyle sapUiSmallMarginBottom"/>
		<Label text="VIN Number" design="Bold" class=" sapUiTinyMarginBottom"/>
		<Input value="{oAppModel>/enteredVIN}" class="aljVINInputStyle sapUiTinyMarginBottom"/>
		<VBox width="100%" alignItems="Center" justifyContent="Center">
			<Text text="The VIN number contains 17 characters, you can find it on your car registration or on front windscreen at the bottom left side"
				class="sapUiTinyMarginBottom" textAlign="Center"/>
			<Button text="SHOW WHERE TO FIND VIN" class="aljLightGreyBtnStyle"/>
			<Button text="Next" press="onPressAddVehicle" class="aljRedBtnStyle"/>
		</VBox>
	</VBox>
</mvc:View>