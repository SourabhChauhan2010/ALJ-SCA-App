<mvc:View controllerName="com.sap.alj.sca.ALJ_SCA.controller.Home" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true"
	xmlns="sap.m" xmlns:l="sap.ui.layout">
	<VBox >
		<HBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" justifyContent="SpaceBetween" alignItems="Center">
			<VBox alignItems="Start" class="aljTitleClassHome">
				<Text text="{i18n>Welcome}" class="aljWelcomeTextCSS"/>
				<Text text="Mohammed" class="aljHomeNameTextCSS"/>
				<Text text="2019 Land Cruiser" class="aljHomeCarModelTextCSS"/>
				<Text text="30,000 KM" class="aljHomeTextCSS sapUiTinyMarginBottom"/>
				<Button text="{i18n>UpdateKM}" class="sapUiTinyMarginBottom aljRedBtnStyle"/>
			</VBox>
			<VBox alignItems="End">
				<Text text="Land Cruiser" class="boldFontCls"/>
				<Text text="{i18n>SwitchCar}" class="underLineCls"/>
			</VBox>
		</HBox>
		<Text text="{i18n>ServiceOffers}" class="aljTitleClass sapUiSmallMarginBeginEnd sapUiTinyMarginBottom"/>
		<ScrollContainer horizontal="true" vertical="false">
			<HBox items="{oAppModel>/ServiceOffer}" justifyContent="SpaceBetween" class="sapUiSmallMarginBeginEnd sapUiContentPadding scrollCnt">
				<Image src="{oAppModel>src}" height="7rem" class="sapUiTinyMarginBottom sapUiContentPadding sapUiTinyMarginEnd" press="onServiceOfferPress"/>
			</HBox>
		</ScrollContainer>
		<HBox class="sapUiSmallMarginBeginEnd sapUiTinyMarginTopBottom" alignItems="Start" justifyContent="SpaceBetween">
			<VBox>
				<Text text="{i18n>RecommendedForYou}" class="aljTitleClass"/>
			</VBox>
			<Link text="{i18n>ShowAll}" class="aljDetailLinkStyle"/>
		</HBox>
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.ServiceList" type="XML"/>
		<!-- Service Status Section - Start-->
		<HBox justifyContent="SpaceBetween" alignItems="Start" class="sapUiSmallMarginBeginEnd">
			<VBox>
				<Label text="{i18n>ServiceStatus}" class="aljTitleClass"/>
			</VBox>
			<Link text="{i18n>ViewDetails} >" class="aljDetailLinkStyle"/>
		</HBox>
		<Text text="2019 Land Cruiser" class="aljSSModelTitleStyle sapUiSmallMarginBeginEnd"/>
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.ServiceStatus" type="XML"/>
		<!-- Service Status Section - End-->
		<!-- Service Section - Start-->
		<Label text="{i18n>Services}" class="aljTitleClass sapUiSmallMarginBeginEnd"/>
		<HBox class="aljHomeServiceBoxStyle sapUiSmallMarginBeginEnd sapUiMediumMarginBottom">
			<VBox justifyContent="Center" alignItems="Center" width="50%">
				<Image src="image/BookService.png" height="2.7rem"/>
				<Button text="{i18n>BookAService}" class="aljServiceBtnStyle"/>
			</VBox>
			<VBox justifyContent="Center" alignItems="Center" width="50%">
				<Image src="image/MyService.png" height="2.7rem"/>
				<Button text="{i18n>MyServices}" class="aljServiceBtnStyle"/>
			</VBox>
		</HBox>
		<!-- Service Section - End-->
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.DesktopFooter" type="XML"/>
	</VBox>
</mvc:View>