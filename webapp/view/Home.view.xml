<mvc:View controllerName="com.sap.alj.sca.ALJ_SCA.controller.Home" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true"
	xmlns="sap.m" xmlns:l="sap.ui.layout">
	<VBox >
		<HBox class="sapUiSmallMargin sapUiMediumMarginTop" justifyContent="SpaceBetween" alignItems="Center">
			<VBox alignItems="Start" class="aljTitleClassHome">
				<Text text="Welcome" class="aljHomeTextCSS"/>
				<Text text="Mohammed" class="classRedFont aljHomeTextCSS1"/>
				<Text text="2019 Land Cruiser" class="aljHomeTextCSS"/>
				<Text text="30,000 KM" class="aljHomeTextCSS sapUiTinyMarginBottom"/>
				<Button text="Update KM" class="sapUiTinyMarginBottom classBckGrndClr" type="Emphasized" press="onPressupdateKM"/>
			</VBox>
			<!--	<ToolbarSpacer/>
		<FlexBox  width="150px" height="250px" justifyContent="End"/>-->
			<VBox alignItems="Center">
				<Text text="Land Cruiser" class="boldFontCls"/>
				<Text text="+Switch Car" class="aljLightGreyBtnStyle underLineCls"/>
			</VBox>
		</HBox>
		<Text text="Service Offers" class="aljTitleClass sapUiSmallMarginBeginEnd sapUiTinyMarginBottom"/>
		<ScrollContainer horizontal="true" vertical="false">
			<HBox items="{oAppModel>/ServiceOffer}"  justifyContent="SpaceBetween" class="sapUiSmallMarginBeginEnd sapUiContentPadding scrollCnt">
				<Image src="{oAppModel>src}" height="9rem" class="sapUiTinyMarginBottom sapUiContentPadding sapUiTinyMarginBeginEnd "/>
			</HBox>
		</ScrollContainer>
		<HBox class="sapUiSmallMarginBeginEnd sapUiTinyMarginBottom" alignItems="Center" justifyContent="SpaceBetween">
			<Text text="Recommended For You" class=" aljTitleClass"/>
			<!--
				<ToolbarSpacer/>
		<FlexBox  width="150px" height="250px" justifyContent="End"/>-->
			<Text text="Show All >"/>
		</HBox>
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.ServiceList" type="XML"/>
		<!-- Service Status Section - Start-->
		<HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBeginEnd sapUiTinyMarginBottom">
			<Label text="{i18n>ServiceStatus}" class="aljTitleClass"/>
			<Link text="{i18n>ViewDetails} >" class="aljDetailLinkStyle"/>
		</HBox>
		<Text text="2019 Land Cruser" class="sapUiSmallMarginBeginEnd"/>
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.ServiceStatus" type="XML"/>
		<!-- Service Status Section - End-->
		<!-- Service Section - Start-->
		<Label text="{i18n>Services}" class="aljTitleClass sapUiSmallMarginBeginEnd sapUiTinyMarginBottom"/>
		<HBox class="aljHomeServiceBoxStyle sapUiSmallMarginBeginEnd">
			<VBox justifyContent="Center" alignItems="Center" width="50%">
				<Image src="image/BookService.png" height="3rem"/>
				<Button text="{i18n>BookAService}" class="aljServiceBtnStyle"/>
			</VBox>
			<VBox justifyContent="Center" alignItems="Center" width="50%">
				<Image src="image/MyService.png" height="3rem"/>
				<Button text="{i18n>MyServices}" class="aljServiceBtnStyle"/>
			</VBox>
		</HBox>
		<!-- Service Section - End-->
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.DesktopFooter" type="XML"/>
	</VBox>
</mvc:View>