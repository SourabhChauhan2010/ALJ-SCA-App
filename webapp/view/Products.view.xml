<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.sap.alj.sca.ALJ_SCA.controller.Products"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox class="styleVehicleBox">
		<HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginBeginEnd sapUiTinyMarginBottom">
			<Label text="{i18n>SelectVehicle}" class="aljTitleClass"/>
			<Button text="{i18n>AddVehicle}" class="aljLightGreyBtnStyle" press="onAddVehiclePress"/>
		</HBox>
		<core:Fragment fragmentName="com.sap.alj.sca.ALJ_SCA.fragment.VehicleList" type="XML"/>
	</VBox>
	<VBox class="styleProdCatBox">
		<Label text="Product Catelog" class="aljTitleClass sapUiSmallMarginBegin"/>
		<ScrollContainer height="100%" width="100%" horizontal="true" focusable="true">
			<HBox items="{oAppModel>/aProdCatelogs}" class="sapUiSmallMarginBeginEnd">
				<CustomListItem class="styleProdServBookBox"
					visible="{path: 'oAppModel>isSelected', formatter:'com.sap.alj.sca.ALJ_SCA.util.formatter.highlightSelectedItem'}" type="Active"
					press="onSelectableItemPress">
					<VBox alignItems="Center">
						<Image src="{oAppModel>src}" width="6rem"/>
						<Label text="{oAppModel>name}"/>
					</VBox>
				</CustomListItem>
			</HBox>
		</ScrollContainer>
	</VBox>
