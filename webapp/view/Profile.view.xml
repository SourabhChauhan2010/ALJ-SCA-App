					<Label text="Mobile Number"/>
					<Text text="982743789" id="idTextPhoneNumber"/>
				
				</VBox>
				<core:Icon size="1rem" src="sap-icon://edit" class=" sapUiMediumMarginTopBottom"/>
			</HBox>
			<HBox class="UserInfoVBoxCSS">
				<core:Icon size="1.5rem" src="sap-icon://email" class=" sapUiSmallMarginTopBottom"/>
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom ">
					<Label text="Email ID"/>
					<Text text="test@alj.com"/>
				</VBox>
				<core:Icon size="1rem" src="sap-icon://edit" class=" sapUiMediumMarginTopBottom"/>
			</HBox>
			<HBox class="UserInfoVBoxCSS">
				<core:Icon size="1.5rem" src="sap-icon://business-card" class=" sapUiSmallMarginTopBottom"/>
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom ">
					<Label text="National ID"/>
					<Text text="7823987348"/>
				</VBox>
				<core:Icon size="1rem" src="sap-icon://edit" class=" sapUiMediumMarginTopBottom"/>
			</HBox>
			<HBox class="UserInfoVBoxCSS">
				<core:Icon size="1.5rem" src="sap-icon://locked" class=" sapUiSmallMarginTopBottom"/>
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom ">
					<Label text="Password"/>
					<Text text="7823987348"/>
				</VBox>
				<core:Icon size="1rem" src="sap-icon://edit" class=" sapUiMediumMarginTopBottom"/>
			</HBox>
		</CustomListItem>
	</List>
	<FlexBox alignItems="Center" justifyContent="Center">
		<Button text="Next" class="aljRedBtnStyle"/>
	</FlexBox>
			
